###> wordpress ###
# Ignore WP Core files
/public/wp

# Ignore default content directories
# Ignore vendor folders in content directories, those are managed via composer
/public/content/mu-plugins/vendor-*
/public/content/plugins/vendor-*
/public/content/themes/vendor-*
/public/content/mu-plugins/*
# Now excluding all plugins because some plugins don't use proper path for their assets
# so `vendor-` prefix breaks paths
/public/content/plugins/*
/public/content/themes/twentytwentyfive
/public/content/themes/twentytwentysix
/public/content/themes/twentytwentyseven
/public/content/themes/twentytwentyeight
# Ignore all content in the uploads and cache directories, except for .gitignore and index.php files
/public/content/uploads/*
!/public/content/uploads/.gitignore
!/public/content/uploads/index.php
/public/content/cache/*
!/public/content/cache/.gitignore
!/public/content/cache/index.php
# Ignore upgrade files
/public/content/upgrade
/wp-cli.phar
