{
  "name": "nickkadutskyi/wp",
  "description": "WordPress boilerplate with Composer",
  "homepage": "https://github.com/nickkadutskyi/wp",
  "support": {
    "issues": "https://github.com/nickkadutskyi/issues"
  },
  "keywords": [
    "composer",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "authors": [
    {
      "name": "Nick Kadutskyi",
      "email": "nick@kadutskyi.com",
      "homepage": "https://github.com/nickkadutskyi"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-curl": "*",
    "ext-exif": "*",
    "ext-imagick": "*",
    "ext-openssl": "*",
    "wpackagist-plugin/akismet": "dev-trunk",
    "wpackagist-theme/twentytwentyfive": "*",
    "symfony/dotenv": "^7.3",
    "symfony/flex": "^2.10"
  },
  "extra": {
    "installer-paths": {
      "public/content/mu-plugins/vendor-{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/content/plugins/vendor-{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/content/themes/vendor-{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "symfony/flex": true
    }
  },
  "scripts": {
    "post-root-package-install": [
      "chmod +x bin/wp-install",
      "chmod +x bin/wp-update"
    ],
    "post-install-cmd": [
      "chmod +x bin/wp-install",
      "chmod +x bin/wp-update"
    ]
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "vimeo/psalm": "^6.13",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "humanmade/psalm-plugin-wordpress": "^3.1",
    "wp-coding-standards/wpcs": "^3.3"
  }
}
