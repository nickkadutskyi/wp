# In all environments, the following files are loaded if they exist,
# the latter taking precedence over the former:
#
#  * .env                contains default values for the environment variables needed by the app
#  * .env.local          uncommitted file with local overrides
#  * .env.$APP_ENV       committed environment-specific defaults
#  * .env.$APP_ENV.local uncommitted environment-specific overrides
#
# Real environment variables win over .env files.
#
# In local development environment use .env.development.local to override any settings
#
# See `config/app.php` for configurable env variables and their usage in the app.

# Can be 'development', 'staging', 'production' or 'local'
# Used to set WP_ENVIRONMENT_TYPE in wp-config.php
APP_ENV=development

# We don't need to enable debugging explicitly because it's enabled
# automatically when APP_ENV is not 'production'.
#
# This will in turn set WP_DEBUG, WP_DEBUG_LOG and WP_DEBUG_DISPLAY,
# SCRIPT_DEBUG, SAVEQUERIES and WP_DISABLE_FATAL_ERROR_HANDLER
#
# APP_DEBUG=true

# We disable theme and plugin file editing and updates from the admin
# because we manage those with Composer and we want to improve security.
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=true

# TODO Provide these in .env.$APP_ENV for each env
WP_HOME=
# We add /wp to the site URL because we are using non-standard WordPress
# directory structure where WordPress core files are in /wp subdirectory
# relative to the web root.
WP_SITEURL=${WP_HOME}/wp

# Disable all automatic updates because we manage those with Composer and WP-CLI.
AUTOMATIC_UPDATER_DISABLED=true
WP_AUTO_UPDATE_CORE=false

# Update this if you want non-standard prefix
TABLE_PREFIX='wp_'

# TODO Provide these in .env.$APP_ENV.local for each env during deployment
DB_NAME='wp'
DB_USER='root'
DB_PASSWORD=''
DB_PORT=3306
DB_HOST=127.0.0.1:${DB_PORT:-3306}
DB_CHARSET=utf8mb4
DB_COLLATE=''

# TODO Provide these in .env.$APP_ENV.local for each env during deployment
AUTH_KEY=
SECURE_AUTH_KEY=
LOGGED_IN_KEY=
NONCE_KEY=
AUTH_SALT=
SECURE_AUTH_SALT=
LOGGED_IN_SALT=
NONCE_SALT=

# TODO Configure these for each environment to be used by bin/db-* scripts
PRODUCTION_SSH_HOST=bitnami@example.com
PRODUCTION_SSH_PATH=/opt/bitnami/your-app
STAGING_SSH_HOST=bitnami@example.com
STAGING_SSH_PATH=/opt/bitnami/your-app-staging

# ------------------------------------------------------------------------------
# Plugins
# ------------------------------------------------------------------------------

# TODO Configure Mailing service settings for each environment
# WP Offload SES Lite settings
# WPOSES_ON enables WP Offload SES constants
# Use true/false for boolean values
WPOSES_ON=false
WPOSES_AWS_ACCESS_KEY_ID=
WPOSES_AWS_SECRET_ACCESS_KEY=
WPOSES_LICENCE=
# Settings constants
WPOSES_SEND_VIA_SES=true
WPOSES_ENQUEUE_ONLY=false
WPOSES_ENABLE_OPEN_TRACKING=false
WPOSES_ENABLE_CLICK_TRACKING=false
WPOSES_ENABLE_SUBSITE_SETTINGS=false
WPOSES_REGION=
WPOSES_DEFAULT_EMAIL=
WPOSES_DEFAULT_EMAIL_NAME=
WPOSES_REPLY_TO=
WPOSES_RETURN_PATH=
# Log duration in days (e.g. 30, 60, 90)
WPOSES_LOG_DURATION=30
WPOSES_DELETE_SUCCESSFUL=false
# Enable instantly deleting successfully re-sent failed emails from the log (Pro only).
WPOSES_DELETE_RE_SENT_FAILED=false
WPOSES_ENABLE_HEALTH_REPORT=true
# Health report frequency: daily, weekly, monthly
WPOSES_HEALTH_REPORT_FREQUENCY=daily
# Health report recipients: site-admins, custom
WPOSES_HEALTH_REPORT_RECIPIENTS=site-admins
# If custom, comma-separated recipients
WPOSES_HEALTH_REPORT_CUSTOM_RECIPIENTS=

# WPMS_ON enables WP Mail SMTP constants
# WPMS_MAILER: mail, gmail, mailgun, sendgrid, smtp,
#              amazonses, sendlayer, smtpcom, sendinblue, outlook,
#              postmark, sparkpost, zoho (defaults to smtp)
# Use true/false for boolean values
WPMS_ON=false
WPMS_LICENSE_KEY=
WPMS_MAIL_FROM=
WPMS_MAIL_FROM_FORCE=true
WPMS_MAIL_FROM_NAME=
WPMS_MAIL_FROM_NAME_FORCE=true
WPMS_MAILER=postmark
WPMS_SET_RETURN_PATH=
WPMS_DO_NOT_SEND=
WPMS_LOGS_ENABLED=true
WPMS_LOGS_LOG_EMAIL_CONTENT=true
# Retention in seconds, 0 keeps logs forever
WPMS_LOGS_LOG_RETENTION_PERIOD=1209600
# SMTP settings (when WPMS_MAILER=smtp)
WPMS_SMTP_HOST=
WPMS_SMTP_PORT=
# SSL options: '', ssl, tls
WPMS_SSL=
WPMS_SMTP_AUTH=
WPMS_SMTP_USER=
WPMS_SMTP_PASS=
WPMS_SMTP_AUTOTLS=
# AWS SES settings (when WPMS_MAILER=amazonses) [Pro Feature]
WPMS_AMAZONSES_CLIENT_ID=
WPMS_AMAZONSES_CLIENT_SECRET=
WPMS_AMAZONSES_REGION=
# Gmail API settings (when WPMS_MAILER=gmail)
WPMS_GMAIL_CLIENT_ID=
WPMS_GMAIL_CLIENT_SECRET=
# Postmark settings (when WPMS_MAILER=postmark)
WPMS_POSTMARK_SERVER_API_TOKEN=
WPMS_POSTMARK_MESSAGE_STREAM=outbound
